{
  "name": "form-builder-backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "preinstall": "node -e \"if (!process.env.ALLOW_NPM && !process.env.npm_execpath.includes('bun')) { console.error('‚ùå Please use bun to manage this project.'); process.exit(1); }\"",
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "build": "bun build ./src/server.ts --outdir ./dist"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.7",
    "nodemon": "^3.1.9",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/express": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
